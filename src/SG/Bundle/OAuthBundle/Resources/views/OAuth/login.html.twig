{% extends '::base.html.twig' %}

{% block navbar %}{% endblock navbar %}

{% block page_header %}
<div class="page-header">
    <h4>{{ 'Identificaci√≥n de usuario'|trans }}</h4>
</div>
{% endblock page_header %}

{% block breadcrumbs %}{% endblock breadcrumbs %}

{% block content_content %}

{% if error %}
<div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form class="form-horizontal" action="{{ path('sg_oauth.security.login_check') }}" method="post">
    <div class="form-group">
        <label class="control-label col-lg-3" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9">
            <input type="text" id="username" name="_username" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-3" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3 col-lg-9">
            <input type="password" id="password" name="_password" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-offset-3 col-lg-9">
            <button type="submit" id="_submit" name="_submit" class="btn btn-warning col-xs-12 col-sm-12 col-md-12 col-lg-12">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
        </div>
    </div>
</form>
{% endblock content_content %}

{% block footer %}{% endblock footer %}